search() {
  local i=0;
  local needle=$1;
  shift
  for str in $@; do
    if [ "$str" = "$needle" ]; then
      echo $i
      return
    else
      ((i++))
    fi
  done
  echo $i
}

export PIO_HOME="$(cd `dirname $0`/..; pwd)"

FIRST_SEP=$(search "--" $@)

FIRST_HALF="${@:1:$FIRST_SEP}"

SECOND_HALF="${@:$FIRST_SEP+1}"

exec $PIO_HOME/bin/pio-class io.prediction.tools.Console $FIRST_HALF --pio-home $PIO_HOME $SECOND_HALF
